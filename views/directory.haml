-# vim: sw=2
- require 'uri'

%nav
  %li
    %a{:href => url('/')} Home
  %li&= @smbfile.getURL

%table
  %thead
    %tr
      %th &nbsp;
      %th Filename
      %th{:align => 'right'} Size
      %th LastModified
  %tbody
    %tr
      %td{ :class => 'dir'} &nbsp;
      %td{:style=>'min-width:50%;'}
        %a{ :href => url('/get/' + CIFS.escape_uri(@smbfile.getParent)) } ..
      %td &nbsp;
      %td &nbsp;
    - @dir.each do |file|
      %tr
        %td
          %div{ :class => CIFS::File.get_icon(file) } &nbsp;
        %td
          - href = url('/get/' + CIFS.escape_uri(file.getURL.toString) )
          %a{ :href => href }&= file.getName
        %td{:align => 'right'}&= file.length
        %td&= Time.at(file.getDate/1000).iso8601
